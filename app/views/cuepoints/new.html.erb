<div class="container">
  <div class="row">
    <div class="col-md-offset-1 col-md-8">
      <div class="heading"><h2>キューポイント登録</h2></div>
        <div class="body">
          <% if @cuepoint.errors.any? %>
            <div id="error_explanation">
              <ul>
                <% @cuepoint.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
            
          <%= form_for @cuepoint, html: {class: "form-horizontal"} do |f| %>
            <div class="form-group">
              <label for="cuepoint[name]" class="control-label col-md-3">Name</label>
              <div class="col-md-6">
                <%= f.text_field :name, :placeholder => "must be done", class: 'form-control' %>
              </div>
            </div>
            
            
            <div class="text">
              <%= f.submit "登録", class: "btn btn-success" %>
            </div>
          <% end %>
        </div>
      
    </div>
  </div>
</div>